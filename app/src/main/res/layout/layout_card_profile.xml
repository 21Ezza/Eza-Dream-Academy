<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvIkon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vektor_5"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:id="@+id/cv_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toEndOf="@id/cvIkon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Pagi,"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    />
                <TextView
                    android:id="@+id/botText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viola Maulana"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnX"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/white"
                app:layout_constraintStart_toEndOf="@id/cv_txt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="100dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/vector_4"/>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>